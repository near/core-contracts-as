    "version": "0.2.0",
    "configurations": [
        {
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Jest Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}